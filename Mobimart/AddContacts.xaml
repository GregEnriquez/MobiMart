<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.AddContacts"
             BackgroundColor="#FDF4DC"
             Title="AddContacts">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *">
            <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"
                Clicked="OnHamburgerClicked" />

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>
    
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">
            <Label Text="Contact Persons"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="#6D5206"
                    FontSize="18"
                    FontAttributes="Bold" />

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

            <Label Text="Contact Persons Name" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Contact Persons Name" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Contact Number" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Contact Number" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Contact Email" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Contact Email" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Contact Socials" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Contact Socials" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Button 
                Text="Add More" 
                BackgroundColor="#FBE7B3"
                BorderColor="#6D5206"
                BorderWidth="2"
                FontSize="12"
                TextColor="#6D5206"
                CornerRadius="20"
                HeightRequest="0"
                HorizontalOptions="Center"
                WidthRequest="87"
                Margin="0,10,0,10" />

            <HorizontalStackLayout Spacing="9" HorizontalOptions="Center">
                <Button 
                    Text="Back"
                    Clicked="OnBackClicked"
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="62"
                    Margin="0,10,0,10" />   
                
                <Button 
                    Text="Save Changes" 
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    HeightRequest="0"
                    HorizontalOptions="Center"
                    WidthRequest="121"
                    Margin="0,10,0,10" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>