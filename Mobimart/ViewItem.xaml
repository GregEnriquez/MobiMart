<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.ViewItem">

    <Frame Padding="10"
           BackgroundColor="#F6CD5E"
           CornerRadius="20"
           HasShadow="True"
           VerticalOptions="Center"
           HorizontalOptions="Center">

        <Grid RowDefinitions="Auto,*">
            
            <ImageButton Source="close_icon.png"
                         Grid.Row="0"
                         ZIndex="1"
                         HorizontalOptions="End"
                         VerticalOptions="Start"
                         BackgroundColor="Transparent"
                         WidthRequest="24"
                         HeightRequest="24"
                         Clicked="OnCloseClicked"/>

            <VerticalStackLayout Grid.Row="0" Spacing="10" Padding="0,10,0,0">
                <Frame Grid.RowSpan="2"
                       WidthRequest="70"
                       HeightRequest="70"
                       CornerRadius="10"
                       IsClippedToBounds="True"
                       VerticalOptions="Center"
                       Margin="0,0,0,0">

                    <Image Source="item.png" Aspect="AspectFill">
                    </Image>
                </Frame>

                <Label x:Name="NameLabel" FontSize="18" FontAttributes="Bold" TextColor="#6D5206" HorizontalOptions="Center"/>
                <BoxView HeightRequest="1" BackgroundColor="#6D5206" />
                <Label x:Name="QuantityLabel" TextColor="#6D5206"/>
                <Label x:Name="PriceLabel" TextColor="#6D5206"/>
                <Label x:Name="TypeLabel" TextColor="#6D5206"/>
                <Label x:Name="DescLabel" TextColor="#6D5206"/>

                <Button Text="Add to List" 
                    BackgroundColor="#FBE7B3" 
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    HeightRequest="0"
                    HorizontalOptions="Center"
                    WidthRequest="120"
                    Margin="0,0,0,0"/>

            </VerticalStackLayout>
        </Grid>
    </Frame>
</ContentView>
