<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.InventoryListPage"
             Title="InventoryListPage"
             BackgroundColor="#FDF4DC">
    
    <Grid RowDefinitions="Auto, *, Auto">

        <Grid BackgroundColor="#D99B2B" Padding="10" Row="0" ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">

            <Label Grid.Column="1"
                   Text="App Name"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="20"
                   TextColor="White"
                   FontAttributes="Bold" />

            <Image Grid.Column="2"
                   Source="cart_icon.png"
                   HeightRequest="24"
                   WidthRequest="24"
                   VerticalOptions="Center"
                   HorizontalOptions="End" />
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="10" Spacing="15">

                <Button Text="Inventory List"
                        BackgroundColor="#F4C14B"
                        TextColor="White"
                        CornerRadius="20"
                        HorizontalOptions="Center"
                        WidthRequest="150" />

                <SearchBar Placeholder="Search Bar"
                           BackgroundColor="White"
                           TextColor="Black"
                           PlaceholderColor="Gray"
                           HeightRequest="40"
                           HorizontalOptions="FillAndExpand" />

                <Grid ColumnDefinitions="*, Auto, *, *, *" BackgroundColor="#C6A34F" Padding="5">
                    <Label Text="Item Name" TextColor="White" FontAttributes="Bold" />
                    <Label Grid.Column="1" Text="Quantity" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Grid.Column="2" Text="Price" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Grid.Column="3" Text="Type" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                    <Label Grid.Column="4" Text="Desc" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center" />
                </Grid>

                <CollectionView ItemsSource="{Binding InventoryItems}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*, Auto, *, *, *" Padding="5" BackgroundColor="#E9D9A4">
                                <Label Text="{Binding Name}" TextColor="Black" />
                                <Label Grid.Column="1" Text="{Binding Quantity}" TextColor="Black" HorizontalOptions="Center" />
                                <Label Grid.Column="2" Text="{Binding Price}" TextColor="Black" HorizontalOptions="Center" />
                                <Label Grid.Column="3" Text="{Binding Type}" TextColor="Black" HorizontalOptions="Center" />
                                <Label Grid.Column="4" Text="{Binding Desc}" TextColor="Black" HorizontalOptions="Center" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="2"
                Text="Barcode Scanner"
                BackgroundColor="Transparent"
                BorderColor="#D99B2B"
                BorderWidth="1"
                TextColor="#D99B2B"
                CornerRadius="20"
                HeightRequest="45"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,10,0,10" />
    </Grid>
</ContentPage>