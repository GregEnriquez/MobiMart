<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.Contracts"
             Title="Contracts"
             BackgroundColor="#FFF8DC">

    <Grid RowDefinitions="Auto,*">

        <!-- HEADER -->
        <Grid BackgroundColor="#D98E04" Padding="10" Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu Icon -->
            <ImageButton
                Source="menu.png"
                WidthRequest="30"
                HeightRequest="30"
                BackgroundColor="Transparent"
                Grid.Column="0" />

            <!-- Title -->
            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Label 
                    Text="App Name"
                    FontSize="20"
                    TextColor="White"
                    HorizontalOptions="Center" />
                <Frame 
                    Padding="8,3"
                    BackgroundColor="#FAD643"
                    CornerRadius="20"
                    HasShadow="False"
                    HorizontalOptions="Center">
                    <Label 
                        Text="Contract Deadlines and Summary"
                        FontAttributes="Bold"
                        TextColor="Brown"
                        FontSize="14"
                        HorizontalOptions="Center" />
                </Frame>
            </VerticalStackLayout>
        </Grid>

        <!-- MAIN CONTENT -->
        <ScrollView Grid.Row="1" Padding="10">
            <VerticalStackLayout Spacing="25">

                <!-- ===================== SUMMARY TABLE ===================== -->
                <Frame BackgroundColor="#D9B959" CornerRadius="10" Padding="10" HasShadow="False">
                    <VerticalStackLayout Spacing="10">

                        <!-- Table Header Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="Date" FontAttributes="Bold" FontSize="16" />
                            <Label Text="⋯" FontSize="20" Grid.Column="1" />
                        </Grid>

                        <!-- Column Headers -->
                        <Grid Padding="0,5" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Item Name" FontAttributes="Bold" />
                            <Label Text="Items Sold" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Center" />
                            <Label Text="Items to Return" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="Center" />
                        </Grid>

                        <!-- Data Entry Rows -->
                        <Grid RowSpacing="6" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Repeatable Rows -->
                            <!-- Row 1 -->
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Row="0">
                                <Entry Placeholder="Item Name" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="1" Grid.Row="0">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="2" Grid.Row="0">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>

                            <!-- Row 2 -->
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Row="1">
                                <Entry Placeholder="Item Name" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="1" Grid.Row="1">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="2" Grid.Row="1">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>

                            <!-- Row 3 -->
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Row="2">
                                <Entry Placeholder="Item Name" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="1" Grid.Row="2">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="2" Grid.Row="2">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                        </Grid>

                        <Label 
                            Text="Amount to Pay: "
                            FontAttributes="Bold"
                            HorizontalOptions="End"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Frame>

                <!-- ===================== UPCOMING DEADLINES ===================== -->
                <Label 
                    Text="Upcoming Deadlines for The Week"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Center" />

                <Frame BackgroundColor="#D9B959" CornerRadius="10" Padding="10" HasShadow="False">
                    <VerticalStackLayout Spacing="10">

                        <!-- Table Header Row -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="Date" FontAttributes="Bold" FontSize="16" />
                            <Label Text="⋯" FontSize="20" Grid.Column="1" />
                        </Grid>

                        <!-- Column Headers -->
                        <Grid Padding="0,5" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Item Name" FontAttributes="Bold" />
                            <Label Text="Items Sold" FontAttributes="Bold" Grid.Column="1" HorizontalOptions="Center" />
                            <Label Text="Items to Return" FontAttributes="Bold" Grid.Column="2" HorizontalOptions="Center" />
                        </Grid>

                        <!-- Data Entry Rows -->
                        <Grid RowSpacing="6" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Row 1 -->
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Row="0">
                                <Entry Placeholder="Item Name" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="1" Grid.Row="0">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="2" Grid.Row="0">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>

                            <!-- Row 2 -->
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Row="1">
                                <Entry Placeholder="Item Name" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="1" Grid.Row="1">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                            <Frame BackgroundColor="White" Padding="6" CornerRadius="12" Grid.Column="2" Grid.Row="1">
                                <Entry Placeholder="0" WidthRequest="60" HorizontalOptions="Center" Keyboard="Numeric" />
                            </Frame>
                        </Grid>

                        <Label 
                            Text="Amount to Pay: "
                            FontAttributes="Bold"
                            HorizontalOptions="End"
                            Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>