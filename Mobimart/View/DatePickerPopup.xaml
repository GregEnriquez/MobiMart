<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                xmlns:sys="clr-namespace:System;assembly=netstandard"
                x:Class="MobiMart.View.DatePickerPopup"
                Margin="0,0,0,0"
                Padding="3">

    <Frame Padding="20"
           BackgroundColor="#FBE7B3"
           BorderColor="#6D5206"
           CornerRadius="15"
           HasShadow="True"
           WidthRequest="200"
           HeightRequest="200">
        
        <VerticalStackLayout Spacing="10">
            <Label Text="Select a Date"
                   FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Center"
                   TextColor="#6D5206"/>
            
            <BoxView HeightRequest="1" BackgroundColor="#6D5206"></BoxView>

            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10"
                    WidthRequest="116">
                <DatePicker x:Name="Picker"
                        Date="{x:Static sys:DateTime.Today}" 
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="White"
                        TextColor="#6D5206"
                        FontAttributes="Bold"/>
            </Border>

            <BoxView HeightRequest="1" BackgroundColor="#6D5206"></BoxView>

            <HorizontalStackLayout Spacing="10" 
                                   HorizontalOptions="Center">
                <Button Text="Cancel" 
                        TextColor="White"
                        Clicked="OnCancelClicked"
                        BackgroundColor="#6D5206"
                        CornerRadius="6"/>
                <Button Text="OK" 
                        TextColor="White"
                        Clicked="OnOkClicked"
                        BackgroundColor="#6D5206"
                        CornerRadius="6"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>