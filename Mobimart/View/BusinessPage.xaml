<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:MobiMart.View"
             x:Class="MobiMart.View.BusinessPage"
             xmlns:viewmodel="clr-namespace:MobiMart.ViewModel"
             x:DataType="viewmodel:BusinessPageViewModel"
             Title="BusinessPage"
             BackgroundColor="#FDF4DC">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*">
            <!-- <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"/> -->

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>
    
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">

            <Label Text="Business Page"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="#6D5206"
                    FontSize="18"
                    FontAttributes="Bold" />

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />
            
            <Grid ColumnDefinitions="*, *" VerticalOptions="Center" HorizontalOptions="Center">
                <Frame Grid.RowSpan="2"
                       WidthRequest="70"
                       HeightRequest="70"
                       CornerRadius="35"
                       IsClippedToBounds="True"
                       VerticalOptions="Center"
                       Margin="0,0,10,0">

                    <Image Source="profile_avatar.png" Aspect="AspectFill">
                    </Image>
                </Frame>

                <Button 
                    Text="Change" 
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    Padding="10,5"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontSize="13"/>
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

            <Label Text="Business Name" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding BusinessName}" Placeholder="Enter business name" BackgroundColor="White" TextColor="#6D5206" FontSize="12" IsEnabled="{Binding IsOwner}"/>
            </Border>

            <Label Text="Business Address" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding BusinessAddress}" Placeholder="Enter business address" BackgroundColor="White" TextColor="#6D5206" FontSize="12" IsEnabled="{Binding IsOwner}"/>
            </Border>

            <Label Text="Business Code" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Border Stroke="#6D5206" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 10,10,10,10"
                        HeightRequest="50"
                        WidthRequest="80">
                    <Entry Text="{Binding BusinessCode}" Placeholder="Code" BackgroundColor="White" TextColor="#6D5206" FontSize="12" WidthRequest="75" HeightRequest="45" HorizontalTextAlignment="Center" IsEnabled="False"/>
                </Border>

                <VerticalStackLayout>
                    <Button 
                        Text="Copy" 
                        IsVisible = "{Binding JoinedBusiness}"
                        BackgroundColor="#FBE7B3"
                        BorderColor="#6D5206"
                        BorderWidth="2"
                        TextColor="#6D5206"
                        CornerRadius="20"
                        HeightRequest="20"
                        HorizontalOptions="Center"
                        WidthRequest="70"
                        Margin="0,0,0,5" 
                        FontSize="10"
                        Padding="5,0"
                        Command="{Binding CopyCodeCommand}"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

        
            <Button 
                Text="Save Changes" 
                BackgroundColor="#FBE7B3"
                BorderColor="#6D5206"
                BorderWidth="2"
                TextColor="#6D5206"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="Center"
                WidthRequest="121"
                Margin="0,10,0,10" 
                Command="{Binding SaveChangesCommand}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button"
                                Binding="{Binding JoinedBusiness}"
                                Value="false">
                        <Setter Property="Text" Value="Generate Business"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Button"
                                Binding="{Binding JoinedBusiness}"
                                Value="true">
                        <Setter Property="Text" Value="Save Changes"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>

            <Button 
                Text="View Employees" 
                BackgroundColor="#FBE7B3"
                BorderColor="#6D5206"
                BorderWidth="2"
                TextColor="#6D5206"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,10,0,10" 
                IsVisible="{Binding CanViewEmployees}"
                Clicked="onViewEmployeesClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>