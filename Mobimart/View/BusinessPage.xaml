<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:MobiMart.View"
             x:Class="MobiMart.View.BusinessPage"
             xmlns:viewmodel="clr-namespace:MobiMart.ViewModel"
             x:DataType="viewmodel:BusinessPageViewModel"
             Title="BusinessPage"
             BackgroundColor="#FDF4DC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <Image 
                Source="avatar_placeholder.png" 
                WidthRequest="100" HeightRequest="100"
                HorizontalOptions="Center"
                Aspect="AspectFill"
                BackgroundColor="LightGray">
                    <Image.Clip>
                        <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                    </Image.Clip>
                </Image>
                <Button 
                Text="Change" 
                BackgroundColor="#D99B2B"
                TextColor="White"
                CornerRadius="10"
                Padding="10,5"
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="Start" />
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#D99B2B" />

            <Label Text="Business Name" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter business name" Text="{Binding BusinessName}" BackgroundColor="White" TextColor="Black" />

            <Label Text="Business Address" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter business address" Text="{Binding BusinessAddress}" BackgroundColor="White" TextColor="Black" />

            <Label Text="Business Code" FontAttributes="Bold" TextColor="Black" />
            <Frame Padding="10" BackgroundColor="White" BorderColor="#D99B2B" CornerRadius="8">
                <Label Text="ABC123" TextColor="Black" FontAttributes="Bold" />
            </Frame>

            <Button 
            Text="Copy Code" 
            BackgroundColor="#D99B2B" 
            TextColor="White"
            CornerRadius="10"
            HeightRequest="45" />

            <Button 
            Text="Save Changes" 
            BackgroundColor="#D99B2B" 
            TextColor="White"
            CornerRadius="10"
            HeightRequest="45"
            Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>