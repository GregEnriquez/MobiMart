<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.DailySales"
             Title="DailySales"
             BackgroundColor="#FFFBE9">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="10" Spacing="15">

                <!-- title -->
                <Grid BackgroundColor="#D28F2C" Padding="15" ColumnDefinitions="40,*,40">
                    <Image Source="menu.png" HeightRequest="24" WidthRequest="24" />
                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="App Name"
                               TextColor="Black"
                               FontSize="18"
                               HorizontalOptions="Center"/>
                        <Border Padding="5" Background="#FDD835">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"/>
                            </Border.StrokeShape>
                            <Label Text="Daily Sales"
                                   FontSize="12"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </Border>
                    </VerticalStackLayout>
                </Grid>

                <!-- navigation of dates -->
                <Grid ColumnDefinitions="40,*,40" VerticalOptions="Center" Padding="10,0">
                    <Button Text="«"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Command="{Binding PreviousDayCommand}"/>

                    <Label Text="{Binding CurrentDate, StringFormat='{0:MMMM dd, yyyy}'}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Grid.Column="1">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectDateCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Button Text="»"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Grid.Column="2"
                            Command="{Binding NextDayCommand}"/>
                </Grid>

                <!-- Previous Balance -->
                <Label Text="{Binding PreviousBalance, StringFormat='Previous Balance: {0:C}'}"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="Black"
                       HorizontalOptions="Center"/>

                <Border Padding="10" Stroke="LightGray" StrokeThickness="1" 
                        HeightRequest="200" WidthRequest="350">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="[Line Chart Here]"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="16"/>
                </Border>

                <!-- Today's Income -->
                <Label Text="{Binding TodaysIncome, StringFormat='Today\'s Income: {0:C}'}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"/>
                <Border Padding="10" Stroke="LightGray" StrokeThickness="1"
                        HeightRequest="200" WidthRequest="350">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="[Pie Chart - Income]"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="16"/>
                </Border>

                <!-- Today's Expenses -->
                <Label Text="{Binding TodaysExpenses, StringFormat='Today\'s Expenses: {0:C}'}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"/>
                <Border Padding="10" Stroke="LightGray" StrokeThickness="1"
                        HeightRequest="200" WidthRequest="350">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="[Pie Chart - Expenses]"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontSize="16"/>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>