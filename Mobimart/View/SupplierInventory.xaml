<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:MobiMart.View"
             x:Class="MobiMart.View.SupplierInventory"
             BackgroundColor="#FDF4DC"
             Title="SupplierInventory">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *">
            <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"
                Clicked="OnHamburgerClicked" />

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="10" Spacing="15">

                <Frame Grid.RowSpan="2"
                       WidthRequest="80"
                       HeightRequest="80"
                       CornerRadius="38"
                       IsClippedToBounds="True"
                       VerticalOptions="Center"
                       Margin="0,20,10,0">

                    <Image Source="profile_avatar.png" Aspect="AspectFill">
                    </Image>
                </Frame>

                <Label 
                    Text="Supplier Name" 
                    FontAttributes="Bold" 
                    TextColor="#6D5206" 
                    HorizontalTextAlignment="Center"
                    FontSize="18"/>

                <Label 
                    Text="Inventory for Wholesale" 
                    FontAttributes="Bold" 
                    TextColor="#6D5206" 
                    HorizontalTextAlignment="Center"
                    FontSize="15"/>

                <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

                <ScrollView Orientation="Horizontal">
                    <VerticalStackLayout>
                        <Grid ColumnDefinitions="Auto, *, *, *, *, *, *, *, *"
                              ColumnSpacing="10"
                              Padding="10"
                              BackgroundColor="#6D5206">

                            <Button 
                                Text="Edit"
                                FontSize="13"
                                BackgroundColor="#FBE7B3"
                                TextColor="#6D5206"
                                CornerRadius="15"
                                HeightRequest="20"
                                WidthRequest="30"
                                HorizontalOptions="End"
                                VerticalOptions="Center"
                                Padding="0"
                                Grid.Column="0"
                                Clicked="editTapped"/>

                            <Label Text="Delivery Id" TextColor="White" Grid.Column="1" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Item Name" TextColor="White" Grid.Column="2" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Delivery Amount" TextColor="White" Grid.Column="3" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Date Delivered" TextColor="White" Grid.Column="4" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Expiration Date" TextColor="White" Grid.Column="5" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Batch Worth" TextColor="White" Grid.Column="6" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Item Type" TextColor="White" Grid.Column="7" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                            <Label Text="Item Description" TextColor="White" Grid.Column="8" FontSize="15" HorizontalTextAlignment="Center" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>

                        <CollectionView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto, *, *, *, *, *, *, *"
                                          Padding="10"
                                          BackgroundColor="#F6CD5E"
                                          Margin="0,1">

                                        <Label Text="Example ID" TextColor="#6D5206" Grid.Column="0" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Name" TextColor="#6D5206" Grid.Column="1" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Amount" TextColor="#6D5206" Grid.Column="2" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Date Delivered" TextColor="#6D5206" Grid.Column="3" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Expiration Date" TextColor="#6D5206" Grid.Column="4" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Batch Worth" TextColor="#6D5206" Grid.Column="5" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Item Type" TextColor="#6D5206" Grid.Column="6" FontSize="14" HorizontalTextAlignment="Center"/>
                                        <Label Text="Example Item Description" TextColor="#6D5206" Grid.Column="7" FontSize="14" HorizontalTextAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>
            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            Text="Back" 
            Clicked="OnBackClicked"
            BackgroundColor="#FBE7B3"
            BorderColor="#6D5206"
            BorderWidth="2"
            TextColor="#6D5206"
            CornerRadius="20"
            HeightRequest="40"
            HorizontalOptions="Center"
            WidthRequest="62"
            Margin="0,10,0,10" />
    </Grid>
</ContentPage>