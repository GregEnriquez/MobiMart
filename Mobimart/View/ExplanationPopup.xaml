<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="MobiMart.View.ExplanationPopup"
               BackgroundColor="Transparent"
               Padding="0"
               Margin="0"
               HorizontalOptions="FillAndExpand"
               CanBeDismissedByTappingOutsideOfPopup="True"
               InputTransparent="False">

    <Grid BackgroundColor="#CC000000" HorizontalOptions="Fill" VerticalOptions="Fill">
        
        <Border StrokeShape="RoundRectangle 15"
                StrokeThickness="0"
                BackgroundColor="White"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="300"
                Padding="20">
            
            <VerticalStackLayout Spacing="15">
                
                <Label Text="Calculation Details"
                       x:Name="TitleLabel"
                       FontAttributes="Bold" 
                       FontSize="18" 
                       TextColor="Black"/>

                <ScrollView MaximumHeightRequest="300">
                    <Label x:Name="ExplanationLabel" 
                           TextColor="Gray" 
                           FontSize="14" />
                </ScrollView>

                <Button Text="Close" 
                        Clicked="OnCloseClicked"
                        BackgroundColor="{StaticResource Secondary}" 
                        TextColor="{StaticResource Primary}"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</toolkit:Popup>