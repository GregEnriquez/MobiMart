<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.IncomeSummary"
             BackgroundColor="#FDF4DC"
             Title="IncomeSummary">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *">
            <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"
                Clicked="OnHamburgerClicked" />

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="Auto,*">

        <Label Text="Sales History"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TextColor="#6D5206"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,10,0,0"/>

        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Today's Income placeholder -->
                <Frame BackgroundColor="#FFD966"
                       CornerRadius="15"
                       Padding="15"
                       HasShadow="True">
                    <HorizontalStackLayout VerticalOptions="Center">
                        <Label Text="Today's Income:" 
                               FontAttributes="Bold" 
                               FontSize="18" 
                               TextColor="#6D5206"/>
                        <Entry Placeholder="Enter today's income"
                               FontSize="18"
                               TextColor="#6D5206"
                               Margin="10,0,0,0"
                               Keyboard="Numeric"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </Frame>

                <!-- Pie Chart Placeholder -->
                <Frame BorderColor="#6D5206" CornerRadius="10" Padding="10">
                    <!-- Replace with MAUI Chart control -->
                    <Label Text="Pie Chart Here"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray"/>
                </Frame>

                <BoxView HeightRequest="1" BackgroundColor="#6D5206" />
                
                <!-- Table title -->
                <Label Text="Items Sold Today"
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#6D5206"/>

                <!-- Table with Borders -->
                <CollectionView>
                    <CollectionView.Header>
                        <Grid ColumnDefinitions="2*,1*,1*,1*,1.5*" Padding="5" BackgroundColor="#6D5206">
                            <Label Text="Item Name" Grid.Column="0" TextColor="White"/>
                            <Label Text="Amount Sold" Grid.Column="1" TextColor="White" HorizontalTextAlignment="Center"/>
                            <Label Text="Total Price" Grid.Column="2" TextColor="White" HorizontalTextAlignment="Center"/>
                            <Label Text="Date Sold" Grid.Column="3" TextColor="White" HorizontalTextAlignment="Center"/>
                            <Label Text="Item Type" Grid.Column="4" TextColor="White" HorizontalTextAlignment="Center"/>
                        </Grid>
                    </CollectionView.Header>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Spacing="0">
                                <Grid ColumnDefinitions="2*,1*,1*,1*,1.5*" Padding="5" BackgroundColor="#F6CD5E">
                                    <Label Text="{Binding ItemName}" Grid.Column="0" TextColor="#6D5206"/>
                                    <Label Text="{Binding Amount}" Grid.Column="1" HorizontalTextAlignment="Center" TextColor="#6D5206"/>
                                    <Label Text="{Binding Total}" Grid.Column="2" HorizontalTextAlignment="Center" TextColor="#6D5206"/>
                                    <Label Text="{Binding Date}" Grid.Column="3" HorizontalTextAlignment="Center" TextColor="#6D5206"/>
                                    <Label Text="{Binding ItemType}" Grid.Column="4" HorizontalTextAlignment="Center" TextColor="#6D5206"/>
                                </Grid>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- table input (di ko sure if need toh) -->
                <Grid ColumnDefinitions="2*,1*,1*,1*,1.5*" Padding="5" BackgroundColor="#EEE">
                    <Entry Placeholder="Item Name" Grid.Column="0"/>
                    <Entry Placeholder="Amount" Grid.Column="1" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="Total Price" Grid.Column="2" Keyboard="Numeric" HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="Date" Grid.Column="3" HorizontalTextAlignment="Center"/>
                    <Entry Placeholder="Item Type" Grid.Column="4"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>