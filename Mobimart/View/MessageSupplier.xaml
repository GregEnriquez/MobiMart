<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.MessageSupplier"
             xmlns:view="clr-namespace:MobiMart.View"
             xmlns:viewmodel="clr-namespace:MobiMart.ViewModel"
             x:DataType="viewmodel:MessageSupplierViewModel"
             BackgroundColor="#FDF4DC"
             Title="MessageSupplier">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label 
                Text="Items to Request" 
                FontAttributes="Bold" 
                TextColor="#6F4E37" 
                HorizontalTextAlignment="Center"
                FontSize="22"/>

        <BoxView HeightRequest="1" BackgroundColor="#D99B2B" />

        <Grid
            ColumnDefinitions="2*, *, *"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            ColumnSpacing="50"
            RowSpacing="10">

            <Label 
                Text="Item Name: " 
                FontAttributes="Bold" 
                TextColor="#6F4E37"
                Grid.Column="0"
                FontSize="18"
                HorizontalTextAlignment="Center"/>

            <Label 
                Text="Quantity: " 
                FontAttributes="Bold" 
                TextColor="#6F4E37"
                Grid.Column="1"
                FontSize="18"
                HorizontalTextAlignment="Center"/>

            <Label 
                Text="Price: " 
                FontAttributes="Bold" 
                TextColor="#6F4E37"
                Grid.Column="2"
                FontSize="18"
                HorizontalTextAlignment="Center"/>

        </Grid>

        <CollectionView ItemsSource="{Binding RequestedItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        ColumnDefinitions="2*, *, *"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        ColumnSpacing="50">

                        <Border
                            Stroke="#A9882D"
                            StrokeThickness="1.5"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            Grid.Column="0"
                            Margin="0,5,0,0">
                                <Entry Placeholder="Item Name" Text="{Binding itemName}" BackgroundColor="#F8ECC6" TextColor="#A9882D" />
                        </Border>

                        <Border
                            Stroke="#A9882D"
                            StrokeThickness="1.5"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            Grid.Column="1"
                            Margin="0,5,0,0">
                                <Entry Placeholder="Item Quantity" Text="{Binding quantity}" BackgroundColor="#F8ECC6" TextColor="#A9882D" />
                        </Border>

                        <Border
                            Stroke="#A9882D"
                            StrokeThickness="1.5"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            Grid.Column="2"
                            Margin="0,5,0,0">
                                <Entry Placeholder="Item Price" Text="{Binding itemPrice}" BackgroundColor="#F8ECC6" TextColor="#A9882D" />
                        </Border>
                        
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="5">

            <Image 
                   Source="plus.png" 
                   WidthRequest="15" HeightRequest="15"
                   VerticalOptions="Center" />
            <Label Text="Add More" FontAttributes="Bold" TextColor="#6F4E37"/>
            <HorizontalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding AddItemCommand}"/>
            </HorizontalStackLayout.GestureRecognizers>
        </HorizontalStackLayout>

        <Border
                Stroke="#E1B53E"
                StrokeThickness="1.5"
                StrokeShape="RoundRectangle 10,10,10,10"
                Margin="0,100,0,0">

            <Editor 
                    Text="{Binding Message}" 
                    TextColor="#A9882D"
                    BackgroundColor="#F8ECC6"
                    FontSize="16"
                    AutoSize="TextChanges"
                    HeightRequest="100"/>
        </Border>

        <Button 
                Text="Compose Message" 
                BackgroundColor="#D99B2B" 
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45"/>

    </VerticalStackLayout>
</ContentPage>