<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MobiMart.ViewModel"
             x:Class="MobiMart.View.Calendar"
             Title="Calendar"
             BackgroundColor="#FFFBE9">

    <ContentPage.BindingContext>
        <viewmodel:CalendarViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid BackgroundColor="#D18800"
              Padding="10"
              Row="0"
              HeightRequest="90">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Title + Subtitle -->
            <VerticalStackLayout Grid.Column="1"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label Text="App Name"
                       FontSize="18"
                       TextColor="White"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"/>
                <Label Text="{Binding Title}"
                       BackgroundColor="#FFD54F"
                       TextColor="White"
                       Padding="15,3"
                       FontAttributes="Bold"
                       FontSize="14"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Calendar Content -->
        <ScrollView Grid.Row="1" Padding="15">
            <VerticalStackLayout Spacing="20">

                <!-- Month Navigation -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Button Text="◀ Prev"
                            Command="{Binding PrevMonthCommand}"
                            BackgroundColor="#FFD54F"
                            TextColor="White"
                            CornerRadius="15"
                            Padding="10,3"/>

                    <Label Text="{Binding MonthYear}"
                           FontAttributes="Bold"
                           FontSize="20"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Black"/>

                    <Button Text="Next ▶"
                            Command="{Binding NextMonthCommand}"
                            BackgroundColor="#FFD54F"
                            TextColor="White"
                            CornerRadius="15"
                            Padding="10,3"/>
                </HorizontalStackLayout>

                <!-- Calendar Days -->
                <CollectionView ItemsSource="{Binding Days}"
                                ItemsLayout="VerticalGrid, 7"
                                Margin="0,10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="LightGray"
                                   CornerRadius="10"
                                   Padding="10"
                                   HasShadow="False"
                                   HeightRequest="50"
                                   WidthRequest="50">
                                <Label Text="{Binding Day}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontSize="16"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>