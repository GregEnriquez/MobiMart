<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MobiMart.View"
    x:Class="MobiMart.View.UserPage"
    xmlns:viewmodel="clr-namespace:MobiMart.ViewModel"
    x:DataType="viewmodel:UserPageViewModel"
    BackgroundColor="#FDF4DC"
    Title="User">

    <Grid>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center">
                <Image 
                    Source="avatar_placeholder.png" 
                    WidthRequest="100" HeightRequest="100"
                    HorizontalOptions="Center"
                    Aspect="AspectFill"
                    BackgroundColor="LightGray">
                    <Image.Clip>
                        <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                    </Image.Clip>
                </Image>
                <Button 
                    Text="Change" 
                    BackgroundColor="#D99B2B"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="10,5"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Start" />
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#D99B2B" />

            <Label Text="Full Name" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter full name" Text="{Binding FullName}" BackgroundColor="White" TextColor="Black" />

            <Label Text="Email" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter email" Text="{Binding Email}" BackgroundColor="White" TextColor="Black" Keyboard="Email" />

            <Label Text="Password" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter password" Text="{Binding Password}" IsPassword="True" BackgroundColor="White" TextColor="Black" IsEnabled="False"/>

            <Label Text="Age" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter age" Text="{Binding Age}" BackgroundColor="White" TextColor="Black" Keyboard="Numeric" />

            <Label Text="Birthday" FontAttributes="Bold" TextColor="Black" />
            <!-- <Entry Placeholder="MM/DD/YYYY" Text="{Binding Birthday}" BackgroundColor="White" TextColor="Black" /> -->
            <DatePicker Date="{Binding Birthday}" Background="White" TextColor="Black" Format="MM/dd/yyyy" MinimumDate="01/01/1920"/>

            <Label Text="Phone Number" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter phone number" Text="{Binding PhoneNumber}" BackgroundColor="White" TextColor="Black" Keyboard="Telephone" />

            <Label Text="Join Business" FontAttributes="Bold" TextColor="Black" />
            <Entry Placeholder="Enter business code" Text="{Binding BusinessCode}" BackgroundColor="White" TextColor="Black" />

            <Button 
                Text="Create or Join" 
                BackgroundColor="#D99B2B" 
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45" />

            <Button 
                Text="Save Changes" 
                BackgroundColor="#D99B2B" 
                TextColor="White"
                CornerRadius="10"
                HeightRequest="45"
                Command="{Binding SaveChangesCommand}"
                Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>


    <Border BackgroundColor="#66000000"
                StrokeThickness="0"
                IsVisible="{Binding IsBusy}" 
                InputTransparent="{Binding IsBusy}">
        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                            Color="#D99B2B" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" />
    </Border>
    </Grid>
</ContentPage>