<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MobiMart.View"
    x:Class="MobiMart.View.UserPage"
    xmlns:viewmodel="clr-namespace:MobiMart.ViewModel"
    x:DataType="viewmodel:UserPageViewModel"
    BackgroundColor="#FDF4DC"
    Title="User">


    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *">
            <!-- <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"/> -->

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>
    
    <Grid>
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">

            <Label Text="User Page"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="#6D5206"
                    FontSize="18"
                    FontAttributes="Bold" />

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />
            
            <Grid ColumnDefinitions="*, *" VerticalOptions="Center" HorizontalOptions="Center">
                <Frame Grid.RowSpan="2"
                       WidthRequest="70"
                       HeightRequest="70"
                       CornerRadius="35"
                       IsClippedToBounds="True"
                       VerticalOptions="Center"
                       Margin="0,0,10,0">

                    <Image Source="profile_avatar.png" Aspect="AspectFill">
                    </Image>
                </Frame>
                
                <Button 
                    Text="Change" 
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    Padding="10,5"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontSize="13"/>
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

            <Label Text="Full Name" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding FullName}" Placeholder="Enter full name" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Email" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding Email}" Placeholder="Enter email" BackgroundColor="White" TextColor="#6D5206" Keyboard="Email" FontSize="12"/>
            </Border>

            <Label Text="Password" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="********" Placeholder="Enter password" IsPassword="True" BackgroundColor="White" TextColor="#6D5206" FontSize="12" IsEnabled="False"/>
            </Border>

            <Label Text="Age" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding Age}" Placeholder="Enter age" BackgroundColor="White" TextColor="#6D5206" Keyboard="Numeric" FontSize="12"/>
            </Border>

            <Label Text="Birthday" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <!-- <Entry Text="{Binding Birthday}" Placeholder="MM/DD/YYYY" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/> -->
                <DatePicker Date="{Binding Birthday}" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Phone Number" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding PhoneNumber}" Placeholder="Enter phone number" BackgroundColor="White" TextColor="#6D5206" Keyboard="Telephone" FontSize="12"/>
            </Border>


            <Label Text="Join Business:" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            
            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Border Stroke="#6D5206" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 10,10,10,10"
                        HeightRequest="50"
                        WidthRequest="80">
                    <Entry Text="{Binding BusinessCode}" Placeholder="Code" BackgroundColor="White" TextColor="#6D5206" FontSize="12" WidthRequest="75" HeightRequest="45" HorizontalTextAlignment="Center" IsEnabled="{Binding NotJoinedBusiness}"/>
                </Border>

                <VerticalStackLayout>
                    <Button 
                        Text="Create" 
                        BackgroundColor="#FBE7B3"
                        BorderColor="#6D5206"
                        BorderWidth="2"
                        TextColor="#6D5206"
                        CornerRadius="20"
                        HeightRequest="20"
                        HorizontalOptions="Center"
                        WidthRequest="70"
                        Margin="0,0,0,5" 
                        FontSize="10"
                        Padding="5,0"
                        Clicked="onCreateClicked"/>
                    <Button 
                        Text="Join" 
                        BackgroundColor="#FBE7B3"
                        BorderColor="#6D5206"
                        BorderWidth="2"
                        TextColor="#6D5206"
                        CornerRadius="20"
                        HeightRequest="15"
                        HorizontalOptions="Center"
                        WidthRequest="70"
                        Margin="0,0,0,5" 
                        FontSize="10"
                        Padding="5,0"
                        Command="{Binding JoinBusinessCommand}"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Button 
                Text="Save Changes" 
                BackgroundColor="#FBE7B3"
                BorderColor="#6D5206"
                BorderWidth="2"
                TextColor="#6D5206"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,10,0,10" 
                Command="{Binding SaveChangesCommand}"/>

        </VerticalStackLayout>
    </ScrollView>


    <Border BackgroundColor="#66000000"
                StrokeThickness="0"
                IsVisible="{Binding IsBusy}" 
                InputTransparent="{Binding IsBusy}">
        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                            Color="#D99B2B" 
                            VerticalOptions="Center" 
                            HorizontalOptions="Center" />
    </Border>
    </Grid>
    
</ContentPage>