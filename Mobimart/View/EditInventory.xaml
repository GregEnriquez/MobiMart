<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.EditInventory"
             BackgroundColor="#FDF4DC"
             Title="EditInventory">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Edit Inventory Item" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,30" TextColor="#6D5206" FontAttributes="Bold"/>

            <Label Text="Item Name" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                StrokeThickness="1" 
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding ItemName}" Placeholder="Enter Item Name" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Quantity" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                StrokeThickness="1" 
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding TotalAmount}" Placeholder="Enter Quantity" Keyboard="Numeric" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Price" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                StrokeThickness="1" 
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding RetailPrice}" Placeholder="Enter Price" Keyboard="Numeric" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Item Type" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border Stroke="#6D5206" 
                StrokeThickness="1" 
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Text="{Binding ItemType}" Placeholder="Enter Type" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Button Text="Save" 
                Command="{Binding SaveCommand}" 
                BackgroundColor="#FBE7B3"
                BorderColor="#6D5206"
                BorderWidth="2"
                TextColor="#6D5206"
                CornerRadius="20"
                HeightRequest="40"
                HorizontalOptions="Center"
                WidthRequest="200"
                Margin="0,20,0,10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>