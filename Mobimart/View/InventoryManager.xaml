<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.InventoryManager"
             BackgroundColor="#FDF4DC"
             Title="InventoryManager">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *">
            <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"
                Clicked="OnHamburgerClicked" />

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <HorizontalStackLayout>
                <Image Source="alert_icon.png"/>

                <Label Text="Inventory Alerts:" 
                   FontAttributes="Bold" 
                   TextColor="#6D5206" 
                   FontSize="18"/>
            </HorizontalStackLayout>
            <Label Text="• Expiration Alert" TextColor="#6D5206"/>
            <Label Text="• Restocking Alert 1" TextColor="#6D5206"/>
            <Label Text="• Restocking Alert 2" TextColor="#6D5206"/>
            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

            <Label Text="Inventory Summary" 
                   FontAttributes="Bold" 
                   FontSize="20" 
                   TextColor="#6D5206"/>

            <!-- Placeholder for Graph -->
            <BoxView HeightRequest="150" BackgroundColor="LightGray" CornerRadius="10"/>

            <!-- Notifications -->
            <Frame BorderColor="#6D5206" BackgroundColor="#FBE7B3" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Inventory Notifications:" FontAttributes="Bold" TextColor="#6D5206"/>
                    <Label Text="• (ID) Tomi - Nearing out of stock." TextColor="#6D5206"/>
                    <Label Text="• (ID) Milk Magic - Nearing expiration." TextColor="#6D5206"/>
                    <Label Text="• (ID) Chocnut - Out of stock." TextColor="#6D5206"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Most & Least Sold Items -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="↑ Most Sold Items" TextColor="Green" FontAttributes="Bold"/>
                    <BoxView HeightRequest="120" BackgroundColor="LightGray" CornerRadius="10"/>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="↓ Least Sold Items" TextColor="Red" FontAttributes="Bold"/>
                    <BoxView HeightRequest="120" BackgroundColor="LightGray" CornerRadius="10"/>
                </VerticalStackLayout>
            </Grid>

            <Frame BorderColor="#6D5206" BackgroundColor="#FBE7B3" Padding="10">
                <VerticalStackLayout>
                    <Label Text="Inventory Recommendations:" FontAttributes="Bold" TextColor="#6D5206"/>
                    <Label Text="• Cold Drinks are bought a lot this season..." TextColor="#6D5206"/>
                    <Label Text="• Cold Fruity Drinks are recommended..." TextColor="#6D5206"/>
                    <Label Text="• Recommends Not Restocking 'Marlboro Gold'..." TextColor="#6D5206"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>