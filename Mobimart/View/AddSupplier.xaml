<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiMart.View.AddSupplier"
             BackgroundColor="#FDF4DC"
             Title="AddSupplier">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto, *">
            <ImageButton
                Grid.Column="0"
                Source="hamburger_icon.png"
                HeightRequest="24"
                WidthRequest="24"
                Clicked="OnHamburgerClicked" />

            <Label
                Grid.ColumnSpan="2"
                Text="MobiMart"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="20"
                TextColor="White"
                FontAttributes="Bold" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="15">

            <Label Text="Add Supplier"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    TextColor="#6D5206"
                    FontSize="18"
                    FontAttributes="Bold" />

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

            <Grid ColumnDefinitions="Auto, *" VerticalOptions="Center" HorizontalOptions="Center">
                <Frame 
                    WidthRequest="70"
                    HeightRequest="70"
                    CornerRadius="35"
                    IsClippedToBounds="True"
                    VerticalOptions="Center"
                    Margin="0,0,10,0">

                    <Image Source="profile_avatar.png" Aspect="AspectFill">
                    </Image>
                </Frame>

                <Button 
                    Text="Change" 
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    Padding="10,5"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontSize="13" />
            </Grid>

            <BoxView HeightRequest="1" BackgroundColor="#6D5206" />

            <Label Text="Supplier Name" FontAttributes="Bold" TextColor="#6D5206" FontSize="13" />
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Supplier Name" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>


            <Label Text="Supplier Type" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Supplier Type" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Supplier Number" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Supplier Number" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Supplier Email" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Supplier Email" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <Label Text="Supplier Socials" FontAttributes="Bold" TextColor="#6D5206" FontSize="13"/>
            <Border
                Stroke="#6D5206"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
                <Entry Placeholder="Enter Supplier Socials" BackgroundColor="White" TextColor="#6D5206" FontSize="12"/>
            </Border>

            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="5">

                <Image 
                   Source="add_icon.png" 
                   WidthRequest="15" HeightRequest="15"
                   VerticalOptions="Center" />
                <Label Text="Add More" FontAttributes="Bold" TextColor="#6D5206"/>
            </HorizontalStackLayout>

            <Button 
                Text="Add Contact" 
                FontSize="12"
                BackgroundColor="#FBE7B3"
                BorderColor="#6D5206"
                BorderWidth="2"
                TextColor="#6D5206"
                CornerRadius="20"
                HeightRequest="0"
                HorizontalOptions="Center"
                WidthRequest="100"
                Margin="0,10,0,10"
                Clicked="onButtonClicked"/>

            <HorizontalStackLayout Spacing="9" HorizontalOptions="Center">
                <Button 
                    Text="Back"
                    Clicked="OnBackClicked"
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    HeightRequest="40"
                    HorizontalOptions="Center"
                    WidthRequest="62"
                    Margin="0,10,0,10" />

                <Button 
                    Text="Save Changes" 
                    BackgroundColor="#FBE7B3"
                    BorderColor="#6D5206"
                    BorderWidth="2"
                    TextColor="#6D5206"
                    CornerRadius="20"
                    HeightRequest="0"
                    HorizontalOptions="Center"
                    WidthRequest="121"
                    Margin="0,10,0,10" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>