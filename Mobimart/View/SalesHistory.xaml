                            <Label Text="09:15AM" Grid.Column="0" TextColor="#6D5206"/>
                            <Label Text="Total Price: 425php" 
                                    Grid.Column="1"
                                   TextColor="#6D5206"
                                    HorizontalOptions="End"/>
                        </Grid>
                    </VerticalStackLayout>
                    
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTransactionClicked"/>
                    </Frame.GestureRecognizers>
                    
                </Frame>-->

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>