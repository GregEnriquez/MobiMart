<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobiMart.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MobiMart.View"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="MobiMart"
    Shell.NavBarHasShadow="False"
    Shell.BackgroundColor="#D99B2B"
    Shell.TitleColor="White"
    Shell.ForegroundColor="White">

    <ShellContent
        FlyoutItemIsVisible="False"
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage"/>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="User Page"
            ContentTemplate="{DataTemplate view:UserPage}"
            Icon="dotnet_bot.png"
            Route="UserPage"/>
        <ShellContent
            Title="Business Page"
            ContentTemplate="{DataTemplate view:BusinessPage}"
            Icon="dotnet_bot.png"
            Route="BusinessPage"/>
        <ShellContent
            Title="Supplier List"
            ContentTemplate="{DataTemplate view:SupplierList}"
            Icon="dotnet_bot.png"
            Route="SupplierList"/>
    </FlyoutItem>


</Shell>
