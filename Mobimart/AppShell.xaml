    <Shell.FlyoutHeader>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame Grid.RowSpan="2"
                   WidthRequest="60"
                   HeightRequest="60"
                   CornerRadius="30"
                   IsClippedToBounds="True"
                   VerticalOptions="Center"
                   Margin="0,0,10,0">

                <Image Source="profile_avatar.png" Aspect="AspectFill">
                </Image>
            </Frame>

            <Label Grid.Column="1"
                   Text="{Binding BusinessName}"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#6D5206"
                   VerticalOptions="Center">
            </Label>

            <Label Grid.Row="1" Grid.Column="1"
                   Text="{Binding Username}"
                   FontSize="14"
                   TextColor="#6D5206"
                   VerticalOptions="Center">
            </Label>

            <BoxView Grid.Row="2" Grid.ColumnSpan="2"
                     HeightRequest="1"
                     Margin="0,10,0,0"
                     BackgroundColor="#6D5206"
                     HorizontalOptions="FillAndExpand"/>

        </Grid>
    </Shell.FlyoutHeader>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="5">
                <Label Text="{Binding Source={RelativeSource AncestorType={x:Type ShellContent}}, Path=Title}" 
                       TextColor="#6D5206"
                       FontSize="15"
                       FontAttributes="Bold">
                </Label>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.FlyoutFooter>
        <Grid Padding="10">
            <VerticalStackLayout Spacing="10">
                <BoxView HeightRequest="1" Color="#6D5206" />

                <Button 
                    Text="Logout"
                    TextColor="White"
                    BackgroundColor="#6D5206"
                    CornerRadius="10"
                    Command="{Binding LogoutCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutFooter>
</Shell>
