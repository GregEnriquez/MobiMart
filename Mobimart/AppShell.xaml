<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobiMart.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MobiMart.View"
    Shell.FlyoutBehavior="Flyout"
    Title="MobiMart"
    Shell.NavBarHasShadow="True"
    Shell.BackgroundColor="#C2910B"
    Shell.TitleColor="Black"
    Shell.ForegroundColor="White"
    FlyoutWidth="250"
    FlyoutBackgroundColor="#FBE7B3">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Shell.FlyoutHeader>
        <Grid Padding="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Frame Grid.RowSpan="2"
                   WidthRequest="60"
                   HeightRequest="60"
                   CornerRadius="30"
                   IsClippedToBounds="True"
                   VerticalOptions="Center"
                   Margin="0,0,10,0">

                <Image Source="profile_avatar.png" Aspect="AspectFill">
                </Image>
            </Frame>

            <Label Grid.Column="1"
                   Text="business name"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#6D5206"
                   VerticalOptions="Center">
            </Label>

            <Label Grid.Row="1" Grid.Column="1"
                   Text="username"
                   FontSize="14"
                   TextColor="#6D5206"
                   VerticalOptions="Center">
            </Label>

            <BoxView Grid.Row="2" Grid.ColumnSpan="2"
                     HeightRequest="1"
                     Margin="0,10,0,0"
                     BackgroundColor="#6D5206"
                     HorizontalOptions="FillAndExpand"/>

        </Grid>
    </Shell.FlyoutHeader>

    <Shell.ItemTemplate>
        <DataTemplate>
            <Grid Padding="5">
                <Label Text="{Binding Title}" 
                       TextColor="#6D5206"
                       FontSize="15"
                       FontAttributes="Bold">
                </Label>
            </Grid>
        </DataTemplate>
    </Shell.ItemTemplate>

    <FlyoutItem Title="Profile">
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate view:UserPage}"
            Route="UserPage" />
    </FlyoutItem>

    <FlyoutItem Title="Inventory" Route="InventoryListPage">
        <ShellContent
            Title="Inventory"
            ContentTemplate="{DataTemplate view:InventoryListPage}"
            Route="InventoryListPage" />
    </FlyoutItem>

    <FlyoutItem Title="Transaction">
        <ShellContent
            Title="Transaction"
            ContentTemplate="{DataTemplate view:TransactionPage}"
            Route="TransactionPage" />
    </FlyoutItem>

    <FlyoutItem Title="Sales History">
        <ShellContent
            Title="Sales History"
            ContentTemplate="{DataTemplate view:SalesHistory}"
            Route="SalesHistory" />
    </FlyoutItem>

    <FlyoutItem Title="Supplier List">
        <ShellContent
            Title="Supplier List"
            ContentTemplate="{DataTemplate view:SupplierList}"
            Route="SupplierList" />
    </FlyoutItem>

    <FlyoutItem Title="Inventory Manager">
        <ShellContent
            Title="Inventory Manager"
            ContentTemplate="{DataTemplate view:InventoryManager}"
            Route="InventoryManager" />
    </FlyoutItem>

    <FlyoutItem Title="Daily Sales">
        <ShellContent
            Title="Daily Sales"
            ContentTemplate="{DataTemplate view:DailySales}"
            Route="DailySales" />
    </FlyoutItem>

    <FlyoutItem Title="Sales Forecast">
        <ShellContent
            Title="Sales Forecast"
            ContentTemplate="{DataTemplate view:SalesForecast}"
            Route="SalesForecast" />
    </FlyoutItem>

    <FlyoutItem Title="Calendar">
        <ShellContent
            Title="Calendar"
            ContentTemplate="{DataTemplate view:Calendar}"
            Route="Calendar" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Grid Padding="10">
            <VerticalStackLayout Spacing="10">
                <BoxView HeightRequest="1" Color="#6D5206" />

                <Button 
                    Text="Logout"
                    TextColor="White"
                    BackgroundColor="#6D5206"
                    CornerRadius="10" />
                <!--Clicked="OnLogoutClicked" />-->
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
