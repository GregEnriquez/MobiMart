<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobiMart.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MobiMart.View"
    xmlns:viewmoedl="clr-namespace:MobiMart.ViewModel"
    x:DataType="viewmoedl:FlyoutMenuViewModel"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="False"
    Title="MobiMart"
    Shell.NavBarHasShadow="True"
    Shell.BackgroundColor="#C2910B"
    Shell.TitleColor="Black"
    Shell.ForegroundColor="White"
    FlyoutWidth="250"
    FlyoutBackgroundColor="#FBE7B3">
    
    <FlyoutItem FlyoutItemIsVisible="False">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Title="Navbar">
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate view:UserPage}"
            Route="UserPage" />
        <ShellContent
            Title="Business Page"
            ContentTemplate="{DataTemplate view:BusinessPage}"
            Icon="dotnet_bot.png"
            Route="BusinessPage"/>
        <ShellContent
            Title="Inventory"
            ContentTemplate="{DataTemplate view:InventoryListPage}"
            Route="InventoryListPage" />
        <ShellContent
            Title="Transaction"
            ContentTemplate="{DataTemplate view:TransactionPage}"
            Route="TransactionPage" />
        <ShellContent
            Title="Sales History"
            ContentTemplate="{DataTemplate view:SalesHistory}"
            Route="SalesHistory" />
        <ShellContent
            Title="Supplier List"
            ContentTemplate="{DataTemplate view:SupplierList}"
            Route="SupplierList" />
    </FlyoutItem>

